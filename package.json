{
  "name": "rhyming-dictionary",
  "main": "./lib/index",
  "version": "0.0.1",
  "description": "A rhyming dictionary for Atom (http://atom.io)",
  "keywords": [],
  "repository": "https://github.com/partials-music/atom-rhyming-dictionary",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": [
      "rhyming-dictionary:find-perfect-rhymes",
      "rhyming-dictionary:find-near-rhymes",
      "rhyming-dictionary:find-all-rhymes",
      "rhyming-dictionary:highlight",
      "rhyming-dictionary:lyrics",
      "rhyming-dictionary:playlist",
      "rhyming-dictionary:nlp"
    ]
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "express": "^4.13.4",
    "get-promise": "^1.4.0",
    "json-stringify-safe": "^5.0.1",
    "moment": "^2.13.0",
    "nlp_compromise": "^4.12.1",
    "passport": "^0.3.2",
    "passport-oauth2": "^1.3.0",
    "passport-spotify": "^0.3.0",
    "scrape-url": "^3.0.0",
    "spotify-web-api-node": "^2.3.0"
  },
  "devDependencies": {
    "standard": "^7.0.1"
  },
  "standard": {
    "globals": [
      "atom",
      "describe",
      "it",
      "expect",
      "beforeEach",
      "jasmine",
      "runs",
      "spyOn",
      "waitsFor",
      "waitsForPromise",
      "fit"
    ]
  },
  "configSchema": {
    "spotifyAccessToken": {
      "title": "Spotify Access Token",
      "description": "Lets us pull songs from the Spotify API",
      "type": "string",
      "default": ""
    },
    "spotifyClientId": {
      "title": "Spotify Client Id",
      "description": "Identifies us to the Spotify API",
      "type": "string",
      "default": ""
    },
    "spotifyClientSecret": {
      "title": "Spotify Client Secret",
      "description": "Proves our identity to the Spotify API",
      "type": "string",
      "default": ""
    }
  }
}
